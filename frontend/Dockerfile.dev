FROM node:18-alpine

WORKDIR /app

# Instalar dependencias
COPY package*.json ./
RUN npm config set registry https://registry.npmjs.org/ && \
    npm install --force --maxsockets 1 --verbose

# Copiar c√≥digo fuente
COPY . .

# Exponer puerto
EXPOSE 3000

# Comando por defecto
CMD ["npm", "run", "dev"]